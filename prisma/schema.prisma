generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id         String @id @unique @default(uuid())
  name       String
  owner_name String
  email      String @unique
  password   String
  phone      String

  cep          String
  street       String
  number       String
  neighborhood String
  city         String
  state        String

  longitude Decimal
  latitude  Decimal

  pets Pet[]

  @@map("organizations")
}

model Pet {
  id              String @id @unique @default(uuid())
  name            String
  about           String
  age             String
  size            String
  energy_level    String
  environment     String
  organization_id String

  organization Organization @relation(fields: [organization_id], references: [id])

  @@map("pets")
}
